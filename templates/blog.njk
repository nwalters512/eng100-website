{% extends "base.njk" %}

{% block title %}Blog - Nathan Walters{% endblock %}
{% block description %}Random thoughts on software and life{% endblock %}

{% block content %}
<h1 class="post-list-header">Random thoughts on software and life</h1>
<div class="post-list">
  {% for post in posts %}
  <article>
    <p class="post-date">{{post.dateString}}</p>
    <h1 class="post-title"><a href="{{post.url}}">{{post.title}}</a></h1>
    <p class="post-description">{{post.description}}</p>
    <a class="read-more" href="{{post.url}}">Read more</a>
  </article>
  {% endfor %}
</div>

{% endblock %}
