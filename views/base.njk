<!DOCTYPE html>
<html lang="en">

{% macro title()%}
{% block title %}Nathan Walters{% endblock %}
{% endmacro %}

{% macro description() %}
{% block description %}Nathan Walters' personal website. Learn more about who I am and what I do!{% endblock %}
{% endmacro %}

<head>
    <meta charset="UTF-8">
    <title>{{ title() }}</title>
    <link rel="shortcut icon" href="img/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Search engine stuff -->
    <meta name="description" content="{{ description() }}">
    <meta name="author" content="Nathan Walters">
    <!-- Open Graph stuff, because why not? -->
    <meta property="og:title" content="{{ title() }}">
    <meta property="og:description" content="{{ description() }}">
    <meta property="og:type" content="website">
    <meta property="og:image" content="http://nwalters.com/img/profile.jpg">
    <meta property="og:url" content="http://nwalters.com">
    <!-- Styles! -->
    <link href="css/styles.css" rel="stylesheet" type="text/css">
    <link href="css/normalize.css" rel="stylesheet" type="text/css">
    <link href="css/mdi.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,300" rel="stylesheet" type="text/css">
    <link href="http://cdn.materialdesignicons.com/1.2.65/css/materialdesignicons.min.css" rel="stylesheet" type="text/css">
    <!-- GA tracking -->
    <script>
    (function(i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r;
        i[r] = i[r] || function() {
            (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date();
        a = s.createElement(o),
            m = s.getElementsByTagName(o)[0];
        a.async = 1;
        a.src = g;
        m.parentNode.insertBefore(a, m)
    })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

    ga('create', 'UA-67210292-1', 'auto');
    ga('send', 'pageview');
    </script>
</head>
</body>
{% block content %}
{% endblock %}
</body>
</html>
